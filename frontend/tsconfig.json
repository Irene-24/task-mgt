{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/icons/*": ["./components/icons/*"],
      "@/providers/*": ["./components/providers/*"],
      "@/ui/*": ["./components/ui/*"],

      "@/shared/*": ["./components/shared/*"],
      "@/components/*": ["./components/*"],
      "@/types/*": ["./lib/types/*"],
      "@/services/*": ["./lib/redux/services/*"],
      "@/slices/*": ["./lib/redux/slices/*"],
      "@/redux/*": ["./lib/redux/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/helpers/*": ["./lib/helpers/*"],
      "@/lib/*": ["./lib/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
